<Window x:Class="Currency_Converter_with_API.Setup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency_Converter_with_API"
        mc:Ignorable="d"
        Title="Setup" SizeToContent="Height" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Content="Enter your API key:"  Grid.Row="0"/>
        <TextBox x:Name="txtSetup" Grid.Row="1" />
        <Button Grid.Row="2" Content="Save" Width="80" Height="36"  VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
